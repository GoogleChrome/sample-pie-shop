{
  "name": "pieshop",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "express-session": "^1.15.6",
    "firebase-admin": "^5.12.1",
    "firestore-export-import": "^0.1.3",
    "morgan": "^1.9.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint:eslint": "eslint src",
    "lint:stylelint": "stylelint 'src/**/*.css'",
    "lint": "npm-run-all --continue-on-error lint:eslint lint:stylelint",
    "build:node": "./tasks/build-node-scripts.sh",
    "build:static": "./tasks/build-static.sh",
    "build": "npm-run-all clean build:node build:static",
    "build:prod": "NODE_ENV=production npm run build",
    "watch:dist": "nodemon --delay 2000ms --watch dist -e css,js,json,hbs,png,svg",
    "watch:node": "nodemon --watch src/data --watch src/server --watch src/services --watch src/templates -e js,json,hbs --exec 'npm run build:node'",
    "watch:static": "nodemon --watch src/client -e css,js,json,png,svg --exec 'npm run build:static'",
    "start:watch": "npm-run-all --parallel watch:static watch:node watch:dist",
    "start": "node dist/server/server.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.4",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "csv-parse": "^2.5.0",
    "eslint": "^5.0.1",
    "eslint-config-google": "^0.9.1",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "^4.12.1",
    "webpack-cli": "^3.0.8",
    "webpack-merge": "^4.1.3",
    "workbox-webpack-plugin": "^3.3.0"
  }
}
