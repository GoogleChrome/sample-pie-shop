{
  "name": "pieshop",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "color": "^3.0.0",
    "cookie-parser": "^1.4.3",
    "cpx": "^1.5.0",
    "debug": "^3.1.0",
    "eslint-config-google": "^0.9.1",
    "eslint": "^4.19.1",
    "express-handlebars": "^3.0.0",
    "express-session": "^1.15.6",
    "express": "^4.16.2",
    "firebase-admin": "^5.12.1",
    "flags": "^0.1.3",
    "morgan": "^1.9.0",
    "node-sass": "^4.9.0",
    "promise-map-series": "^0.2.3",
    "serve-favicon": "^2.5.0",
    "webpack-cli": "^2.1.4",
    "webpack-merge": "^4.1.1",
    "webpack": "^4.8.3"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.js",
    "tools:import_products": "babel-node tools/import_products.js",
    "build:static:images": "./tasks/build-static-images.sh",
    "build:static:scripts": "./tasks/build-static-scripts.sh",
    "build:static:styles": "./tasks/build-static-styles.sh",
    "build:node": "./tasks/build-node-scripts.sh",
    "build": "npm-run-all 'clean' --parallel 'build:static:styles' 'build:static:scripts' 'build:static:images' 'build:node'",
    "build:prod": "NODE_ENV=production npm run build",
    "watch:static:styles": "watch 'npm run build:static:styles' src/client/styles",
    "watch:static:scripts": "watch 'npm run build:static:scripts' src/client/js src/shared/js",
    "watch:static:images": "watch 'npm run build:static:images' src/client/images",
    "watch:node": "watch 'npm run build:node' src/server src/shared/js src/data",
    "watch": "run-p 'watch:static:styles' 'watch:static:scripts' 'watch:static:images' 'watch:node'",
    "test:node": "./tasks/test-node.sh",
    "test:static": "karma start",
    "test": "npm-run-all 'test:node' 'test:static'",
    "serve:nodemon": "nodemon node dist/server/server.js",
    "serve": "npm-run-all build --parallel 'watch' 'serve:nodemon'"
  },
  "devDependencies": {
    "csv-parse": "^2.4.0",
    "karma": "^2.0.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "mocha": "^4.1.0",
    "mockery": "^2.1.0",
    "node-fetch": "^2.1.2",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "supertest": "^3.1.0",
    "watch": "^1.0.2"
  },
  "nodemonConfig": {
    "watch": [
      "dist/*"
    ],
    "delay": "2500"
  }
}
